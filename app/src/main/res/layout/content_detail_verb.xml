<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailVerb"
    tools:showIn="@layout/activity_detail_verb"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@mipmap/gg_verbs"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/infinitive_view"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="infinitive"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:background="#5352ed"
            android:textColor="#dfe6e9"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/simple_past_view"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="simple past"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:background="#5352ed"
            android:textColor="#dfe6e9"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/past_participle_view"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="participle"
            android:gravity="center"
            android:background="#5352ed"
            android:textColor="#dfe6e9"
            android:textSize="18dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phonetic_infinitive_view"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="phonetic_"
            android:gravity="center"
            android:layout_marginRight="10dp"

            android:textColor="#747d8c"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/phonetic_simple_past_view"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="phonetic_"
            android:gravity="center"
            android:layout_marginRight="10dp"

            android:textColor="#747d8c"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/phonetic_past_participle_view"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="phonetic_"
            android:gravity="center"
            android:textColor="#747d8c"
            android:textSize="18dp"/>
    </LinearLayout>

    <!--<ImageView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_launcher_verb_round"
        android:layout_gravity="center"
        />-->
    <TextView
        android:layout_marginTop="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Definition"
        android:textColor="#ff4757"
        android:textStyle="bold|italic"
        android:textSize="17dp"/>

    <TextView
        android:id="@+id/definition_view"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="make (an idea, situation, or problem) clear to someone by describing it in more detail or revealing relevant facts or ideas"
        android:textColor="#57606f"
        android:textStyle="italic"
        android:layout_marginLeft="30dp"/>


    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example"
        android:textColor="#ff4757"
        android:textStyle="bold|italic"
        android:textSize="17dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"    >

        <TextView
            android:id="@+id/sample1View"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When he comes, he will explain everything to us."
            android:textColor="#57606f"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/sample2View"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Well, that explained a lot."
            android:textColor="#57606f"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/sample3View"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Well, that explained a lot."
            android:textColor="#57606f"
            android:textStyle="italic"/>
    </LinearLayout>
</LinearLayout>