<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/infinitive_view"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            tools:text="infinitive"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:background="#5352ed"
            android:textColor="#dfe6e9"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/simple_past_view"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            tools:text="simple past"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:background="#5352ed"
            android:textColor="#dfe6e9"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/past_participle_view"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            tools:text="participle"
            android:gravity="center"
            android:background="#5352ed"
            android:textColor="#dfe6e9"
            android:textSize="18dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/definition_view"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Definition"

        android:textColor="#ff7675"/>
</LinearLayout>